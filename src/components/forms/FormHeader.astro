---
type FormHeaderProps = { title: string; description?: string };
const { title, description }: FormHeaderProps = Astro.props;
---

<div class="border-b border-gray-200 pb-5">
  <h3 class="text-lg font-medium leading-6 text-gray-900">{title}</h3>
  {description && <p class="mt-2 max-w-4xl text-sm text-gray-500">{description}</p>}
</div>